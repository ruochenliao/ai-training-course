{
  "name": "智能客服系统",
  "short_name": "智能客服",
  "description": "基于AI的智能客服系统，提供多模态对话、知识图谱和智能体协作功能",
  "version": "2.0.0",
  "start_url": "/",
  "display": "standalone",
  "orientation": "portrait-primary",
  "theme_color": "#667eea",
  "background_color": "#ffffff",
  "scope": "/",
  "lang": "zh-CN",
  "dir": "ltr",
  "categories": [
    "business",
    "productivity",
    "utilities"
  ],
